    "lint-staged": "^16.2.7",
    "nodemailer": "^7.0.11",
    "oxlint": "^1.34.0",
    "pm2": "^6.0.14",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "tailwindcss": "^4.1.18",
