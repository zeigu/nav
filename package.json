    "@types/file-saver": "^2.0.7",
    "@types/jasmine": "~5.1.13",
    "@types/js-yaml": "^4.0.9",
    "@types/nodemailer": "^7.0.4",
    "@types/nprogress": "^0.2.3",
    "@types/qs": "^6.14.0",
    "body-parser": "^2.2.1",
