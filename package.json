    "@angular/core": "^21.0.6",
    "@angular/forms": "^21.0.6",
    "@angular/platform-browser": "^21.0.6",
    "@angular/platform-browser-dynamic": "^21.0.6",
    "@angular/router": "^21.0.6",
    "@angular/service-worker": "^21.0.6",
    "axios": "^1.13.2",
    "chrome-finder": "^1.0.7",
    "cron": "^4.4.0",
    "dayjs": "^1.11.19",
    "express": "^5.2.1",
    "file-saver": "^2.0.5",
    "js-base64": "^3.7.8",
    "js-yaml": "^4.1.1",
    "localforage": "^1.10.0",
    "lz-string": "^1.5.0",
    "mitt": "^3.0.1",
    "ng-zorro-antd": "^20.4.4",
    "nprogress": "^0.2.0",
    "puppeteer": "^24.34.0",
    "qs": "^6.14.0",
    "rough-notation": "^0.5.1",
    "rxjs": "~7.8.2",
    "sharp": "^0.34.5",
    "zone.js": "~0.16.0"
